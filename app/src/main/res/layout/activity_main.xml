<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_margin="1dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:text="add"
        app:layout_constraintRight_toLeftOf="@id/remove"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/remove"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_margin="1dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:text="remove"
        app:layout_constraintRight_toLeftOf="@id/replace"
        app:layout_constraintLeft_toRightOf="@id/add"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/replace"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_margin="1dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:text="replace"
        app:layout_constraintRight_toLeftOf="@id/hide"
        app:layout_constraintLeft_toRightOf="@id/remove"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hide"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_margin="1dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:text="hide"
        app:layout_constraintRight_toLeftOf="@id/show"
        app:layout_constraintLeft_toRightOf="@id/replace"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/show"
        android:layout_width="0dp"
        android:textAllCaps="false"
        android:layout_margin="1dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:text="show"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/hide"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>